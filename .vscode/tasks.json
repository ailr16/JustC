{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/test/*.c",
                "-o",
                "${workspaceFolder}/bin/justc",
                "-I",
                "${workspaceFolder}/inc",
                "-g"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}